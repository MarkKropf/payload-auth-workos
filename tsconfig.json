{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "noEmit": true,
    "emitDeclarationOnly": false
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./dev/next-env.d.ts",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "exclude": [
    "dev",
    "dist",
    "node_modules"
  ]
}
